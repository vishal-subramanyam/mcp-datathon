# Canvas MPC Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# BACKEND CONFIGURATION
# ============================================

# Environment (development/production)
ENVIRONMENT=development

# Server Configuration
PORT=8000
BASE_URL=http://localhost:8000

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:8501
STREAMLIT_URL=https://your-app.streamlit.app
VERCEL_URL=https://your-app.vercel.app

# ============================================
# AI MODEL CONFIGURATION
# ============================================

# OpenRouter API (for Claude/GPT)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# ============================================
# SUPABASE CONFIGURATION
# ============================================

# Supabase (for user sessions and credentials storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# ============================================
# CANVAS API (DEFAULT/ADMIN)
# ============================================
# These are used as defaults if no per-user credentials are provided
# For per-user credentials, use the Settings page in the frontend

CANVAS_API_URL=https://canvas.instructure.com
CANVAS_API_KEY=your_canvas_api_token_here

# ============================================
# GOOGLE API CONFIGURATION
# ============================================

# Google Calendar
CALENDAR_CREDENTIALS_PATH=credentials.json
CALENDAR_TOKEN_PATH=calendar_token.json

# Gmail
GMAIL_CREDENTIALS_PATH=credentials.json
GMAIL_TOKEN_PATH=token.json

# ============================================
# FRONTEND CONFIGURATION
# ============================================

# Backend API URL (used by frontend)
API_URL=http://127.0.0.1:8000

# ============================================
# FLASHCARD STORAGE
# ============================================

FLASHCARD_STORAGE_PATH=flashcard_data

